<?xml version="1.0"?>
<configuration>
  <system.serviceModel>
    <bindings>
      <ws2007HttpRelayBinding>
        <binding name="default" isDynamic="false">
          <reliableSession enabled="true"/>
          <security mode="Transport" relayClientAuthenticationType="RelayAccessToken"/>
        </binding>
      </ws2007HttpRelayBinding>
    </bindings>
    <extensions>
      <bindingExtensions>
        <add name="ws2007HttpRelayBinding" type="Microsoft.ServiceBus.Configuration.WS2007HttpRelayBindingCollectionElement, Microsoft.ServiceBus,  Culture=neutral, PublicKeyToken=31bf3856ad364e35"/>
      </bindingExtensions>
   </extensions>
    <services>
      <service name="RelaySamples.PingService">
        <endpoint name="ServiceBusEndpoint" contract="RelaySamples.IPingContract" bindingConfiguration="default" binding="ws2007HttpRelayBinding" />
      </service>
    </services>
  </system.serviceModel>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
</configuration>
